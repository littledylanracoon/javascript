    <title>Document</title>
    <style>
      .quantity-form{
       
      }
      .p-price{
        position: relative;
        left: 40px;
        top: 120px;
      }
      .p-sum{
        position: relative;
        left: 200px;
        top: 80px;
      }
      .p-num{
        position: relative;
        left: 100px;
        top: 100px;
      }
      .itxt{
        width: 50px;
        text-align: center;
      }
      a{
        background-color: pink;
      }
      .tot{
        position: absolute;
        left: 400px;
        top: 150px;
      }
    </style>
    <script src="jquerymini.js"></script>
